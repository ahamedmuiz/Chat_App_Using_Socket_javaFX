<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="lk.ijse.chat_app.Controller.ServerController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


    <TextArea fx:id="chatDisplayArea" editable="false" promptText="Client Chat History" VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <TextField fx:id="messageInput" promptText="Type message and press Enter or Send..." HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton" onAction="#sendMessage" text="Send" />
      <Button onAction="#sendImg" text="Choose Img" />
    </HBox>

</VBox>
